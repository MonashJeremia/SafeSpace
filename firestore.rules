rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User profiles collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Users can create their own profile during signup
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Users can update their own profile
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Only allow deletion by the user themselves
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Donations collection - for admin access
    match /donations/{donationId} {
      // Anyone can create a donation
      allow create: if request.auth != null;
      
      // Only authenticated users can read donations
      allow read: if request.auth != null;
      
      // No one can update or delete donations (immutable records)
      allow update, delete: if false;
    }
    
    // Admin-only access to all user data
    match /users/{userId} {
      // Admins can read all user profiles
      allow read: if request.auth != null && 
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
    }
  }
}
